{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WegItems",
  "type": "object",
  "properties": {
    "center": {
      "type": "array",
      "default": [
        {
          "type": "Pinned",
          "displayName": "Explorer",
          "id": "",
          "path": "C:\\Windows\\explorer.exe",
          "pinDisabled": false,
          "relaunchArgs": null,
          "relaunchIn": null,
          "relaunchProgram": "C:\\Windows\\explorer.exe",
          "subtype": "App",
          "umid": null,
          "windows": []
        }
      ],
      "items": {
        "$ref": "#/$defs/WegItem"
      }
    },
    "isReorderDisabled": {
      "description": "Whether the reordering possible on the weg",
      "type": "boolean",
      "default": false
    },
    "left": {
      "type": "array",
      "default": [
        {
          "type": "StartMenu",
          "id": ""
        }
      ],
      "items": {
        "$ref": "#/$defs/WegItem"
      }
    },
    "right": {
      "type": "array",
      "default": [
        {
          "type": "Media",
          "id": ""
        }
      ],
      "items": {
        "$ref": "#/$defs/WegItem"
      }
    }
  },
  "$defs": {
    "PinnedWegItemData": {
      "type": "object",
      "properties": {
        "displayName": {
          "description": "display name of the item",
          "type": "string",
          "default": ""
        },
        "id": {
          "description": "internal UUID to differentiate items",
          "type": "string",
          "default": ""
        },
        "isDir": {
          "description": "@deprecaed will be removed in v3, use subtype `Folder` instead.",
          "type": "boolean",
          "deprecated": true,
          "writeOnly": true
        },
        "path": {
          "description": "path to file, forder or program.",
          "type": "string",
          "default": ""
        },
        "relaunchArgs": {
          "description": "arguments to be passed to the relaunch program",
          "anyOf": [
            {
              "$ref": "#/$defs/RelaunchArguments"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "relaunchCommand": {
          "description": "@deprecaed will be removed in v3, use relaunch_program instead.",
          "type": [
            "string",
            "null"
          ],
          "deprecated": true,
          "writeOnly": true
        },
        "relaunchIn": {
          "description": "path where ejecute the relaunch command",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "relaunchProgram": {
          "description": "program to be executed",
          "type": "string",
          "default": ""
        },
        "subtype": {
          "description": "Subtype of the item (mandatory, but is optional for backward compatibility)",
          "$ref": "#/$defs/WegItemSubtype",
          "default": "UnknownV2_1_6"
        },
        "umid": {
          "description": "Application user model id.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        }
      }
    },
    "RelaunchArguments": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "string"
        }
      ]
    },
    "WegItem": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "Pinned"
            }
          },
          "$ref": "#/$defs/PinnedWegItemData",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "Temporal"
            }
          },
          "$ref": "#/$defs/PinnedWegItemData",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "Separator"
            },
            "id": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "id"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "Media"
            },
            "id": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "id"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "StartMenu"
            },
            "id": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "id"
          ]
        }
      ]
    },
    "WegItemSubtype": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "File",
            "Folder",
            "App"
          ]
        },
        {
          "description": "this is used for backward compatibility, will be removed in v3",
          "type": "string",
          "const": "UnknownV2_1_6"
        }
      ]
    }
  }
}
